{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
